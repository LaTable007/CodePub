EVSL_WITH_CUDA       = NO
EVSL_WITH_MKL        = NO

.SUFFIXES: .o .c .f90 .cu

##################################################################
## RULES
# ##################################################################
%.o: %.c
	$(MUTE) $(CC) $(CFLAGS) $(INCLUDES) -o $@ -c $<

%.o: %.f90
	$(MUTE) $(FC) $(FCFLAGS) $(INCLUDES) -o $@ -c $<

%.o: %.cu
	$(MUTE) $(CUCC) $(CUFLAGS) $(INCLUDES) -o $@ -c $<

CC                   = gcc
CFLAGS               = -O2 -Wall -Wno-unused-result 
LINK_CC              = gcc
FC                   = gfortran
FCFLAGS              = -O2 
LINK_FC              = gfortran
LDFLAGS              = 
CUCC                 = 
CUFLAGS              = 
AR                   = ar rc
RANLIB               = ranlib
LIBS_DIR             = 
LIBS                 = -lm 

# SHARED LIBRARIES
